{
  "name": "my-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:backend": "bun run --filter backend dev",
    "dev:frontend": "bun run --filter frontend dev",
    "dev:mobile": "bun run --filter mobile start",
    "ios": "bun run --filter mobile ios",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "bun run --filter '*' type-check",
    "prepare": "husky",
    "build": "bun run build:frontend && bun run build:prepare",
    "build:frontend": "bun run --filter frontend build",
    "build:prepare": "mkdir -p apps/backend/public && cp -r apps/frontend/dist/* apps/backend/public/",
    "start": "bun apps/backend/src/index.ts",
    "deploy": "bun apps/backend/src/db/migrate.ts && bun apps/backend/src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "bun-types": "^1.3.4",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.7.7"
  }
}
