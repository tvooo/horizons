    "format": "biome format --write .",
    "type-check": "bun run --filter '*' type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.9.3",
    "bun-types": "^1.3.4"
  }
}
